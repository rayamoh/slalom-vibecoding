# Database Configuration
DATABASE_URL=sqlite:///./fraud_detection.db
# For PostgreSQL (Production):
# DATABASE_URL=postgresql://user:password@localhost:5432/fraud_detection

# API Settings
API_V1_PREFIX=/api
PROJECT_NAME=Fraud Detection API
VERSION=1.0.0
DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production

# CORS Settings (Frontend URLs)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000

# Pagination
DEFAULT_PAGE_SIZE=25
MAX_PAGE_SIZE=100

# ML Scoring Service (Phase 2)
ML_SERVICE_URL=http://localhost:8001
ML_MODEL_PATH=../models/fraud_detector_v1.pkl
SCORING_TIMEOUT=30
USE_MOCK_SCORING=True

# File Upload
MAX_UPLOAD_SIZE_MB=10

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Database Pool (PostgreSQL)
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30

# Security (Phase 2)
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Dataset Path
DATASET_PATH=../dataset/Synthetic_Financial_datasets_log.csv
